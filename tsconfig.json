{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2019",
    "rootDir": "./src",
    "declaration": true,
    "alwaysStrict": true,
    "outDir": "./build",
    "sourceMap": true,
    "strict": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "./build",
    "./node_modules"
  ]
}
